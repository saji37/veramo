datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  
  password   String
  did  String 
  @@map("userdetails")
}

model Verifier {
  id    Int     @id @default(autoincrement())
  name String
  email String  
  password   String
  did  String 
  @@map("verifier")
}

model Issuer {
  id    Int     @id @default(autoincrement())
  name String
  email String  
  password   String
  did  String 
  @@map("issuer")
}

model Connection {
  id Int @id @default(autoincrement())
  holderid Int
  issuerid Int
  @@map("connection")
}